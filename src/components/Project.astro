---
import Code from "./icons/Code.astro"
import GitHub from "./icons/GitHub.astro"

const projects = [
{
    name : "PokeMonsster",
    description : "Pokedex principalmente para Movil",
    tecnologias : ["React","Tailwindcss"],
    img : "project5.webp",
     link : "https://pokemonsster.netlify.app/",
     git : "https://github.com/Yisuselpulento/pokeMonsster"
},
{
    name : "AnimeFlix",
    description : "Simulacion de pagina anime",
    tecnologias : ["React","Tailwindcss"],
    img : "project6.webp",
     link : "https://animeflixmonsster.netlify.app/",
     git : "https://github.com/Yisuselpulento/animeflix"
} ,
{
    name : "KanjiApp",
    description : "Red Social MERN Full Stack",
    tecnologias : ["React", "Tailwindcss", "MongoDB", "Node"],
    img : "project4.webp",
    link : "https://kanjiapp.netlify.app",
    git : "https://github.com/Yisuselpulento/KanjiApp"
}, 
{
    name : "CarKanji",
    description : "Pagina de compra de autos",
    tecnologias : ["Astro", "Preact", "Tailwindcss"],
    img : "project1.webp",
     link : "https://carkanji.netlify.app/",
     git : "https://github.com/Yisuselpulento/Car_Kanji"
},
{
    name : "FoodMon",
    description : "Pagina para restaurante de comida",
    tecnologias : ["React", "Tailwindcss"],
    img : "project3.webp",
    link : "https://foodmon.netlify.app/",
    git : "https://github.com/Yisuselpulento/FoodMoon"
},
{
    name : "League Search",
    description : "Solo para Players de LeagueofLegends",
    tecnologias : ["React", "Tailwindcss"],
    img : "project2.webp",
    link : "https://leagueofmonsster.netlify.app/",
    git : "https://github.com/Yisuselpulento/LeagueofSearch"
}

]

const colorsTag = {
    React: "bg-blue-600 text-white",
    Node : "bg-emerald-800 text-gray-200",
    Tailwindcss :  "bg-sky-700 text-white",
    MongoDB : "bg-green-800 text-white",
    Astro : "bg-purple-900 text-white",
    Preact : "bg-indigo-600 text-white"
}


const tagSrc = {
    React : "react.svg",
    Node : "nodejs-icon.svg",
    Tailwindcss : "tailwindcss-icon.svg",
    MongoDB : "mongodb-icon.svg",
    Astro : "astro.svg",
     Preact : "preact.svg"

}
---

<section id="project" class="flex items-center flex-col gap-4 md:pt-20">
    <h2 class="flex gap-3 items-center text-2xl md:text-3xl  mb-8">
        <Code class="w-8 "/> Proyectos</h2>
    <div class="flex gap-10 flex-wrap  items-center justify-center md:p-4">
        {projects.map( (project, i )=> (
            <div class="bg-gradient-to-t dark:from-neutral-900 dark:to-neutral-600 from-gray-200 to-gray-100  bg-opacity-10 rounded-lg shadow">

            <a
            href={project.link}
            target="_blank"
            rel="noreferrer noopener"
            >
                <div 
                style="clip-path: polygon(0 0, 100% 0%, 100% 98%, 0 98%);"  
                class="relative overflow-hidden bg-cover bg-no-repeat rounded-t-lg ">

                <img 
                loading={i > 0 ? "lazy" : "eager"}
                alt={`imagen del proyecto ${project.name}`}
                class="rounded-t-lg h-[270px]  w-[500px] object-cover transition duration-300  bg-gradient-to-b dark:from-blue-700 dark:to-purple-700 from-orange-400 to-yellow-400 p-[1.5px] dark:p-px "
                src={project.img} />
                 <div
      class="absolute bottom-0 left-0 right-0 top-0 h-full w-full overflow-hidden bg-[hsl(0,0%,98.4%,0.2)] bg-fixed opacity-0 transition duration-300 ease-in-out hover:opacity-100"
      ></div>
                </div>
            </a>
            <div class="p-5 flex flex-col gap-5 ">
                   <p class="text-lg font-bold">{project.name}</p> 
                   <p>{project.description}</p>   
                   <div class="flex gap-4 flex-wrap">
                    {project.tecnologias.map( tag => (
                        <div class={`rounded-full px-3 text-sm flex items-center gap-1 ${colorsTag[tag]}`}>
                        <img 
                        loading="lazy"
                        alt={`imagen del tag ${tag}`}
                        class="size-3"
                        src={tagSrc[tag]} />
                        <p>
                            {tag}
                        </p>
                        </div>
                    ))}
                    </div> 
                    <div class="flex md:gap-5 gap-4 md:flex-row flex-col">

                    <a 
                        href={project.link}
                        target="_blank"
            rel="noreferrer noopener"
                        class=" bg-gradient-to-b dark:from-zinc-900 dark:to-zinc-900  from-indigo-800 to-indigo-900  dark:text-white dark:hover:from-gray-100 dark:hover:to-gray-100 text-white hover:from-indigo-500 hover:to-indigo-600 border  rounded px-5 py-3 md:py-2 md:w-[150px]  dark:hover:text-black font-bold text-center transition duration-300">
                        Preview
                    </a>
                    <a 
                     href={project.git}
                     target="_blank"
            rel="noreferrer noopener"
                    class="bg-gradient-to-b dark:from-zinc-900 dark:to-zinc-900  from-indigo-800 to-indigo-900  dark:text-white dark:hover:from-gray-100 dark:hover:to-gray-100 text-white hover:from-indigo-500 hover:to-indigo-600 border  rounded px-5 py-3 md:py-2 md:w-[150px]  dark:hover:text-black font-bold text-center flex items-center gap-3 justify-center transition duration-300">
                        <GitHub class="size-5"/>
                        Github
                    </a>
                    </div>
           </div>
         </div>
              
        ))}

    </div>
</section>

