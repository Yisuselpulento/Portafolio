---
import Instagram from "./Instagram.astro"
import Discord from "./icons/Discord.astro"
import Email from "./icons/Email.astro"
import Wsp from "./icons/Wsp.astro"

const className = "flex items-center gap-4 bg-zinc-800 hover:bg-zinc-700 hover:scale-105 transition px-3 py-2 rounded-lg md:w-[200px] "

const classNameNoHover = "flex items-center gap-4 bg-zinc-800  px-3 py-2 rounded-lg md:w-[200px] "

---

<section id="contact" class="flex items-center flex-col gap-4 md:p-10 mt-18">
    <h2 class="flex gap-3 items-center text-2xl md:text-3xl  mb-8">
        <Email class="w-8 "/>Contactame</h2>
        <div class="flex flex-col gap-5 items-center ">

          <p class="text-xl">Estas son mis Redes Sociales</p>
          <div class="flex gap-5 md:flex-row flex-col w-full pt-3">
            <a 
            href=""
            class={className}>
                <Instagram  class="size-8"/>
                <div>
                    <p class="text-gray-300">Instagram</p>
                </div>
            </a>
            <a 
            href=""
            class={className}>
                <Discord  class="size-8"/>
                <div>
                    <p class="text-gray-300">Discord</p>
                </div>
            </a>
            <div 
            class={classNameNoHover}>
                <Wsp class="size-8" />
                <div>
                    <p class="text-gray-300">WhatsApp</p>
                    <p>+56975259414</p>
                </div>
            </div>
            <div 
            class={classNameNoHover}>
                <Email  class="size-8"/>
                <div>
                    <p class="text-gray-300">Telegram</p>
                    <p>+56975259414</p>
                </div>
            </div>
          </div>
        </div>
</section>